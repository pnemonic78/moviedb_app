<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    app:startDestination="@id/moviesFragment">

    <fragment
        android:id="@+id/moviesFragment"
        android:name="com.tikal.tmdb.ui.movies.MoviesFragment"
        android:label="@string/movies_title"
        tools:layout="@layout/fragment_movies">
        <action
            android:id="@+id/action_moviesFragment_to_movieDetailFragment"
            app:destination="@id/movieDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/movieDetailFragment"
        android:name="com.tikal.tmdb.ui.moviedetails.MovieDetailFragment"
        android:label="@string/movies_details_title"
        tools:layout="@layout/fragment_details">
        <argument
            android:name="movei_id"
            app:argType="long" />
    </fragment>
</navigation>